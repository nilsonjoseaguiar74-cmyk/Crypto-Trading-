# ============================================
# WALLET-GATED AI - CONFIGURAÇÃO DE AMBIENTE
# ============================================

# FRONTEND (React/Vite)
VITE_BACKEND_URL=http://localhost:5000
VITE_CONTRACT_ADDRESS=0xSEU_CONTRATO_AQUI
VITE_INFURA_PROJECT_ID=seu_infura_project_id
VITE_ALCHEMY_API_KEY=sua_alchemy_api_key
VITE_WALLETCONNECT_PROJECT_ID=seu_walletconnect_project_id

# BACKEND/AGENT (Python/FastAPI)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/seu_infura_project_id
# Alternativas RPC:
# SEPOLIA_RPC_URL=https://rpc.sepolia.org
# SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
# SEPOLIA_RPC_URL=https://sepolia.gateway.tenderly.co

PRIVATE_KEY=0xSUA_PRIVATE_KEY_AQUI_64_CARACTERES
CONTRACT_ADDRESS=0xSEU_CONTRATO_DEPLOYADO
COINGECKO_API_KEY=sua_coingecko_api_key_opcional

# DATABASE (PostgreSQL - opcional para produção)
DATABASE_URL=postgresql://user:password@localhost:5432/walletgatedai
REDIS_URL=redis://localhost:6379/0

# AUTHENTICATION & SECURITY
JWT_SECRET=sua_chave_secreta_jwt_32_caracteres
SESSION_SECRET=outra_chave_secreta_sessao
ENCRYPTION_KEY=chave_criptografia_32_bytes

# API KEYS (opcional para features avançadas)
ETHERSCAN_API_KEY=sua_etherscan_api_key
ALCHEMY_API_KEY=sua_alchemy_api_key
INFURA_PROJECT_ID=seu_infura_project_id
MORALIS_API_KEY=sua_moralis_api_key

# FEATURE FLAGS
ENABLE_WEB3_CONNECTION=true
ENABLE_SIGNAL_GENERATION=true
ENABLE_CONTRACT_INTERACTION=true
ENABLE_USER_AUTHENTICATION=true
DEBUG_MODE=true

# LOGGING
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/app.log
ENABLE_CONSOLE_LOG=true

# PERFORMANCE
API_TIMEOUT=30
MAX_WORKERS=4
CACHE_TTL=300  # 5 minutos

# ============================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO
# ============================================
NODE_ENV=development
PORT_FRONTEND=5173
PORT_BACKEND=5000
PORT_CONTRACTS=8545  # Hardhat local node

# ============================================
# CONFIGURAÇÃO DE PRODUÇÃO (alterar conforme necessário)
# ============================================
# NODE_ENV=production
# PORT_FRONTEND=3000
# PORT_BACKEND=8000
# DEBUG_MODE=false
